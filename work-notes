#!/bin/bash

case "$1" in
    create|c)
        mkdir -p "./work_notes/context"
        cat > "./work_notes/prompt.md" << 'EOF'
# Definition of done
Describe when task is considered done

# Test and play
Describe the ways to interact with the code to prove that solution works.
Eg. by running test or seeing how UI renders.
EOF
        echo "âœ… Created work_notes with context folder and prompt.md."
        code work_notes/prompt.md
        ;;
    remove|r)
        rm -rf "./work_notes"
        echo "ðŸ—‘ Removed work_notes folder."
        ;;
    *)
        echo "Usage: work-notes {create|c|remove|r}"
        ;;
esac
